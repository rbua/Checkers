<Window x:Class="CheckersGame.PlayerIdentificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersGame"
        mc:Ignorable="d"
        Title="Player Identification" Height="170" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/Icon.ico">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid>
        <TextBox x:Name="textBox2" KeyboardNavigation.TabIndex="1" HorizontalAlignment="Left" Height="23" Margin="120,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
        <Label x:Name="label" Content="Enter player1 name:" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" KeyboardNavigation.TabIndex="0" HorizontalAlignment="Left" Height="22" Margin="120,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
        <Label x:Name="label_Copy" Content="Enter player2 name:" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" KeyboardNavigation.TabIndex="2" Content="OK" HorizontalAlignment="Left" Margin="109,108,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
